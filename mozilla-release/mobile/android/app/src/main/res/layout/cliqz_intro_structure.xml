<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cliqz_default_background">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/dots"
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/cliqz_intro_dots"
        android:contentDescription="@string/onboarding_introduction"/>

    <Button
        android:id="@+id/start_browsing"
        android:layout_width="156dp"
        android:layout_height="41dp"
        android:layout_above="@id/dots"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@color/general_blue_color"
        android:text="@string/ghostery_onboarding_action_button"
        android:textAllCaps="false"
        tools:text="Start Browsing"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:padding="10dp"
        android:layout_above="@id/start_browsing">

        <include layout="@layout/cliqz_intro_first_screen_content"
            tools:remove="true" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/content_container"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/cliqz_intro_ic_first_screen"
        android:contentDescription="@string/onboarding_introduction" />
</RelativeLayout>