<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/offrz_onboaring_container"
            layout="@layout/myoffrz_onboarding_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/offers_loading_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/myoffrz_deactivate_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/myoffrz_deactivated_layout"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/offers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:orientation="vertical" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>