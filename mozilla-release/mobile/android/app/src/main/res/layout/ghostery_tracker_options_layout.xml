<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/trust_button"
        android:layout_width="@dimen/ghostery_list_item_action_button_width"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/trust_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_trust_site" />

        <TextView
            android:id="@+id/trust_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trust_icon"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            tools:text="Trust" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/restrict_button"
        android:layout_width="@dimen/ghostery_list_item_action_button_width"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark">

        <ImageView
            android:id="@+id/restrict_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_block" />

        <TextView
            android:id="@+id/restrict_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restrict_icon"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            tools:text="Restrict" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block_button"
        android:layout_width="@dimen/ghostery_list_item_action_button_width"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light">

        <ImageView
            android:id="@+id/block_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_trust_site" />

        <TextView
            android:id="@+id/block_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_icon"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            tools:text="Block" />

    </RelativeLayout>

</LinearLayout>