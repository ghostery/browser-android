<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myoffrz_onboarding_bg"
    tools:visibility="visible"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/onboarding_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right|end"
        android:layout_marginEnd="@dimen/myoffrz_padding_10"
        android:layout_marginRight="@dimen/myoffrz_padding_10"
        android:layout_marginTop="@dimen/myoffrz_padding_10"
        android:background="@null"
        android:tint="@color/myoffrz_icon_tint"
        app:srcCompat="@drawable/ic_cancel_nm"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onboarding_feature_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/myoffrz_padding_8"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/myoffrz_padding_10"
            android:textAlignment="center"
            android:text="@string/myoffrz_onboarding_description"
            tools:text="Receive attractive discounts and bargains with this feature" />

        <Button
            android:id="@+id/learn_more_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/learn_more"
            tools:text="Learn more"
            android:textColor="@color/myoffrz_icon_tint" />

    </LinearLayout>

</FrameLayout>
