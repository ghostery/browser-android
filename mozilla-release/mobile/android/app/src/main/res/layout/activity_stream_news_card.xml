<org.mozilla.gecko.widget.themed.ThemedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_news_item_background_selector"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/new_card_padding_10"
    android:paddingEnd="@dimen/new_card_padding_5"
    android:paddingStart="@dimen/new_card_padding_5"
    android:paddingTop="@dimen/new_card_padding_10">

    <ImageView
        android:id="@+id/favicon"
        android:layout_width="@dimen/news_favicon_size"
        android:layout_height="@dimen/news_favicon_size"
        android:layout_marginLeft="@dimen/new_card_padding_5"
        android:layout_marginStart="@dimen/new_card_padding_5"
        tools:background="@drawable/favicon_globe"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/new_card_padding_10"
        android:paddingStart="@dimen/new_card_padding_10"
        tools:ignore="RtlSymmetry">

        <org.mozilla.gecko.widget.themed.ThemedTextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/cliqz_start_tab_font_color"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam" />

        <org.mozilla.gecko.widget.themed.ThemedTextView
            android:id="@+id/url_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/cliqz_start_tab_font_color"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry"
            tools:text="cliqz.com" />

    </LinearLayout>

</org.mozilla.gecko.widget.themed.ThemedLinearLayout>
