<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/general_blue_color">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/cliqz_intro_ic_dots_third_screen"
        android:contentDescription="@string/onboarding_search"/>

    <Button
        android:id="@+id/start_browsing"
        android:layout_width="156dp"
        android:layout_height="41dp"
        android:layout_above="@id/dots"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@android:color/white"
        android:text="@string/ghostery_onboarding_action_button"
        android:textColor="#00AEF0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/second_screen_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@id/start_browsing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:text="@string/ghostery_onboarding_quick_search_text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/second_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/second_screen_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/ghostery_onboarding_quick_search_title"
        android:textColor="@android:color/white"
        android:textSize="27sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_above="@id/second_screen_title"
        android:scaleType="fitCenter"
        android:src="@drawable/cliqz_intro_ic_third_screen"
        android:contentDescription="@string/onboarding_search"/>
</RelativeLayout>