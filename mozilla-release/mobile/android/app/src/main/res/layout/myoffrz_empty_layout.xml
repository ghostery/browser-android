<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gecko="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="#AAAAAA">

    <!-- Empty spacer view -->
    <View android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

    <org.mozilla.gecko.widget.ShadowedThemedTextView
        android:id="@+id/empty_myoffrz_title"
        style="@style/CliqzEmptyLayoutTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myoffrz_no_offers_title"
        tools:text="Seems like we do not have any offers" />

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/empty_myoffrz_description_one"
        style="@style/CliqzEmptyLayoutTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myoffrz_no_offers_msg_line1"
        tools:text="But we'll keep looking for you and add" />

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/empty_myoffrz_description_two"
        style="@style/CliqzEmptyLayoutTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myoffrz_no_offers_msg_line2"
        tools:text="them here as soon as we have one" />

    <!-- Empty spacer view -->
    <View android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"/>

</LinearLayout>
