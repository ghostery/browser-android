<resources>
    <style name="dashboard_measurement_value">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textColor">@color/dashboard_text_blue</item>
        <item name="android:textSize">@dimen/dashboard_measurement_value_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_item">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_item_title" parent="dashboard_item">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/dashboard_item_title_size</item>
        <item name="android:paddingBottom">@dimen/padding_5</item>
    </style>

    <style name="dashboard_item_content" parent="dashboard_item">
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/dashboard_item_content_size</item>
    </style>
</resources>