<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dashboard_item_background"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginBottom="@dimen/padding_5"
            tools:src="@drawable/ic_anti_phishing_hook" />

        <TextView
            android:id="@+id/item_measurement"
            style="@style/dashboard_measurement_value"
            tools:text="GB" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            style="@style/dashboard_item_title"
            android:textAlignment="textStart"
            tools:text="Item Title" />

        <TextView
            android:id="@+id/item_content"
            style="@style/dashboard_item_content"
            android:textAlignment="textStart"
            tools:text="Item content is written here" />

    </LinearLayout>

</LinearLayout>
