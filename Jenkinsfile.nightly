                        def apkPath = "/app/mozilla-release/objdir-frontend-android/${flavorname}/gradle/build/mobile/android/app/outputs/apk/officialWithGeckoBinariesNoMinApiPhoton/release/${apk}"
                        sh """#!/bin/bash -l 
                            set -e
                            set -x
                            aws s3 cp --acl public-read --acl bucket-owner-full-control ${apkPath} ${s3Path}/${flavorname}${getId()}.apk
                            aws s3 cp --acl public-read --acl bucket-owner-full-control ${apkPath} ${s3Path}/latest.apk
                        """
